<!DOCTYPE html>

<head>
    <title>Todo App</title>
    <link rel="stylesheet" href="/static/stylesheets/style.css" type="text/css">
    <link rel="stylesheet" href="/static/stylesheets/bootstrap.css" type="text/css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker3.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

<body>
    <form class="container m-5 p-2 rounded mx-auto bg-light shadow" action="/" method="POST">
        <!-- App title section -->
        <div class="row m-1 p-4">
            <div class="col">
                <div class="p-1 h1 text-primary text-center mx-auto
                    display-inline-block">
                    <i class="fa fa-check bg-primary text-white rounded p-2"></i>
                    <u>Список дел</u>
                </div>
            </div>
        </div>
        <!-- Create todo section -->
        <div class="row m-1 p-3">
            <div class="col col-11 mx-auto">
                <div class="row bg-white rounded shadow-sm p-2 add-todo-wrapper
                    align-items-center justify-content-center">
                    <div class="col">
                        <input class="form-control form-control-lg border-0
                            add-todo-input bg-transparent rounded" type="text" placeholder="Напишите что-нибудь..." name="content">
                    </div>
                    <div class="col-auto px-0 mx-0 mr-2">
                        <button type="submit" class="btn btn-primary">Добавить</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="p-2 mx-4 border-black-25 border-bottom"></div>
        <!-- Todo list section -->
        <div class="row mx-1 px-5 pb-3 w-80">
            <div class="col mx-auto">
                <!-- Todo Item 1 -->
                <% todoTasks.forEach(details=> { %>
                    <div class="row px-3 align-items-center todo-item rounded">
                        <div class="col px-1 m-1 d-flex align-items-center">
                            <div class="d-flex align-items-center">
                                <label type="text" class="form-control
                                    form-control-lg border-0 edit-todo-input
                                    bg-transparent rounded px-3 ">
                                    <input type="checkbox" class="option-input radio">
                                    <span class="label-text">
                                        <%= details.content %>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <div class="col-auto m-1 p-0 px-3 d-none">
                        </div>
                        <div class="col-auto m-1 p-0 todo-actions">
                            <div class="row todo-created-info">
                                <div class="col-auto d-flex
                                        align-items-center pr-2">
                                    <label class="date-label my-2
                                            text-black-50">
                                        <%= details.updatedAt %>
                                    </label>
                                    <a href="/edit/<%= details._id %>" class="edit">
                                        <span class="fas fa-edit"></span>
                                    </a>
                                    <a href="/remove/<%= details._id %>" class="remove">
                                        <span class="fas fa-times"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-2 mx-4 border-black-25 border-bottom"></div>
                    <% }) %>
            </div>
        </div>
    </form>
</body>